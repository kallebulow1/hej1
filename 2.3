

country_counts <- cleaned %>%
  filter(on_ground == FALSE) %>%
  count(origin_country, sort = TRUE)

top10 <- country_counts %>%
  slice_max(n, n = 10)



ggplot(top10, aes(x = reorder(origin_country, n), y = n)) +
  geom_col(fill = "steelblue") +
  geom_text(aes(label = n), hjust = -0.1, size = 3) +
  coord_flip() +
  labs(
    title = "Top 10 lande med flest fly i luften lige nu",
    x = "Oprindelsesland",
    y = "Antal fly",
    caption = "Kilde: OpenSky Network API"
  ) +
  theme_minimal(base_size = 12)
